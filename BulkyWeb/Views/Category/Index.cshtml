@model List<Category>
<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    


    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end ">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create New Category</a>
            </div>
        </div>


        <table class="table table-bordered table-striped text-center">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Edit</th>
            </tr>
            </thead>

            @foreach (var obj in Model)
            {
                <tbody>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i><i class="bi bi-trash3-fill"></i>Delete</i>
                        </a>
                    </div>
                </td>
                </tbody>
            }

        </table>
    </div>
</div>
</body>
</html>